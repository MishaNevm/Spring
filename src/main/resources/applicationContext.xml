<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">
    <context:property-placeholder location="classpath:musicPlayerParametrs.properties"/>
    <bean id="classicMusicBean" class="org.example.pr6.musicTypes.ClassicMusic"/>
    <bean id="rapMusicBean" class="org.example.pr6.musicTypes.RapMusic"/>
    <bean id="musicPlayerBean" class="org.example.pr6.MusicPlayer" scope="prototype">
        <constructor-arg>
            <list>
                <ref bean="classicMusicBean"/>
                <ref bean="rapMusicBean"/>
            </list>
        </constructor-arg>
        <constructor-arg value="${MusicPlayer.name}"/>
        <constructor-arg value="${MusicPlayer.volume}"/>
    </bean>
</beans>